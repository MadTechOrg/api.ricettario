{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
      "use": "readonly",
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "semi": [
        2, "never"
      ],
      "no-restricted-syntax": [0, "ForInStatement", "ForOfStatement"],
      "class-methods-use-this": "off",
      "strict": [0, "global"],
      "consistent-return": "off",
      "no-param-reassign": "off",
      "global-require": "off"
    }
}
